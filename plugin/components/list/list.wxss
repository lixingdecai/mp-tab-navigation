page {
  width: 100%;
  height: 100%;
}
.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.fit-iphonex {
  height: calc(100% - 68rpx);
}
.fit-iphonex::after {
  content: " ";
  position: fixed;
  bottom: 0 !important;
  height: 68rpx !important;
  width: 100%;
  background: #fff;
}

.scroll-view-item {
  padding: 5px 10px;
  display: inline-block;
}

.scroll-view-catalog {
  height: 35px;
  width: 100%;
  font-size: 16px;
  white-space: nowrap;
  display: flex;
}
.active-catalog {
  color: #f70;
}
.scroll-view-catalog::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.scroll-view-wrap {
  border: 1px solid #eee;
  width: 100%;
}

.content-wrap {
  flex: 1;
  width: 100%;
}

.content-swiper-wrap {
  height: 100%;
}
.scroll-view-content {
  width: 100%;
  height: 100%;
  white-space: nowrap;
}

.weui-grid {
  position: relative;
  float: left;
  padding: 18rpx 0 8rpx 0;
  width: 24.9999%;
  text-align: center;
  box-sizing: border-box;
}
.weui-grid .des {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  padding: 9rpx 0;
}
.weui-grid .des text {
  font-size: 24rpx;
  color: #5c5c5c;
}

.weui-grid:before {
  content: " ";
  position: absolute;
  right: 0;
  top: 0;
  width: 1px;
  bottom: 0;
  border-right: 1px solid #d9d9d9;
  color: #d9d9d9;
  -webkit-transform-origin: 100% 0;
  transform-origin: 100% 0;
  -webkit-transform: scaleX(0.5);
  transform: scaleX(0.5);
}

.weui-grid:after {
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1px;
  border-bottom: 1px solid #d9d9d9;
  color: #d9d9d9;
  -webkit-transform-origin: 0 100%;
  transform-origin: 0 100%;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}

.weui-grid:active {
  background-color: #ececec;
}

.weui-grid-item {
  width: 130rpx;
  height: 130rpx;
  margin: 0 auto;
  position: relative;
}
.catalog-item-default {
  width: 130rpx;
  height: 130rpx;
}

.catalog-item-image {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 10;
  display: block;
  width: 100%;
  height: 100%;
}
